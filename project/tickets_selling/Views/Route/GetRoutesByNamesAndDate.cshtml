@using Domain.Entities
@using Microsoft.AspNetCore.Http.Extensions
@model IEnumerable<Route>

@{
    ViewBag.Title = "Найденные маршруты";
}

<table class="table table-responsive">
  <thead>
    <tr>
      <th scope="col">Автобус</th>
      <th scope="col">Отправление</th>
      <th scope="col">Прибытие</th>
      <th scope="col">Статус</th>
      <th scope="col">Купить</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var route in @Model)
    {
    <tr>
        <form style="display: inline" action="@Url.Content("~/Cart/Index")" method="get">
            <input id="routeId" name="routeId" type="hidden" value="@route.Id">
            @Html.Hidden("returnUrl", @Context.Request.GetDisplayUrl())
            <th>@route.Id @route.DepartureName - @route.DestinationName</th>
            <td>@route.DepartureDateTime</td>
            <td>@route.ArrivalDateTime</td>
            <td>@route.Status</td>
            <td><input type="submit" class="btn btn-sm btn-outline-warning" value="В корзину"></td>
        </form>
    </tr>
    }
  </tbody>
</table>

@{
    ViewData["Title"] = "List";
}


